{
  "manifest_version": 3,
  "name": "Instagram DM Toplu Silici",
  "version": "1.0",
  "description": "Instagram web arayüzünde DM (Direct Message) sohbetlerinizi toplu olarak silmenizi sağlar.",
  "permissions": ["webRequest", "downloads", "activeTab", "scripting"],
  "host_permissions": ["https://*.instagram.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.instagram.com/*", "https://*.facebook.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
